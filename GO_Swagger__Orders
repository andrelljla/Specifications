        - 
          name: accountID
          type: integer
          description: <dr>
          in: query
          required: false
        - name: accountNumber
          type: string
          description: <dr>
          in: query
          required: false
        - name: billerID
          type: integer
          description: <dr>
          in: query
          required: false

      tags:
        - W01
      responses:
        200:
          description: Successful completion; pending order flag set and date(s) available as appropriate
