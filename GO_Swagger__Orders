  OrderReferenceIDs:
    properties:
      prodOrderID:
        type: integer
        description: Unique identifier for the Product Order generated in SOLO
      workOrderID:
        type: integer
        description: Unique identifier for the Work Order generated in SOLO.  Note - Gateway does not allow generating multiple work orders per Prod order (yet).
      accountID:
        type: integer
        description: Unique identifier (SOLO) for the Account for which the Order is generated
      customerID:
        type: integer
        description: Unique identifier (SOLO) for the Customer/Party for which the Order is generated
      MECOrderID:
        type: integer
        description: Unique identifier (SOLO) for the MEC Order generated
      billerSystemDesignation:
        type: string
        description: Designator for the billing system in chich the order was generated
      prodOrderNumber:
        type: string
        description: Unique identifier for the Product Order generated in biller
      workOrderNumber:
        type: string
        description: Unique identifier for the Work Order generated in biller. Note - Gateway does not allow generating multiple work orders per Prod order (yet). 
      accountNumber:
        type: string
        description: Unique identifier (biller) for the Account for which the Order is generated

